<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPanel">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/dashboard"
        android:background="@drawable/border_low_strong"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="140dp">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/logos"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="1dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            app:civ_border_width="2dp"
            app:civ_border_color="#d0d0d0"/>
        <View
            android:layout_marginTop="10dp"
            android:id="@+id/line"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/logos"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/mav"/>
        <TextView
            android:layout_below="@+id/line"
            android:id="@+id/message"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textColor="@color/siyah"
            android:text="Sayın"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"/>
        <TextView
            android:layout_below="@+id/message"
            android:id="@+id/namex"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorAccent"
            android:text="KullanıcıAdı"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <Button
            android:layout_alignParentLeft="true"
            android:id="@+id/main_back"
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_action_namemain" />
        <Button
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:id="@+id/foto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_add_a_photo_black_24dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/dashboard2"
        android:background="@drawable/border_low_strong"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent"
        android:layout_below="@id/dashboard">
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/kisisel_bilgi"
            android:background="@drawable/user_profileinfo_border"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="left"
                android:id="@+id/txt_kisisel_bilgi"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:text="@string/underline_string1"
                android:textColor="@color/colorText"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/user_profileinfo_border"
            android:id="@+id/username_Relative"
            android:layout_below="@+id/kisisel_bilgi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="left"
                android:id="@+id/namee"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Kullanıcı Adı:"
                android:textColor="@color/colorText"/>
            <TextView
                android:textColor="@color/siyah"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/namee"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/user_profileinfo_border"
            android:id="@+id/email_Relative"
            android:layout_below="@+id/username_Relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="left"
                android:layout_centerVertical="true"
                android:id="@+id/emaill"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail:"
                android:textColor="@color/colorText"/>
            <TextView
                android:textColor="@color/siyah"
                android:gravity="center"
                android:id="@+id/email"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/emaill"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/user_profileinfo_border"
            android:id="@+id/arama_bilgileri_relative"
            android:layout_below="@+id/email_Relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:gravity="left"
                android:layout_centerVertical="true"
                android:id="@+id/belirtme"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/underline_string"
                android:textColor="@color/colorText"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/user_profileinfo_border"
            android:id="@+id/tarih_saat_relative"
            android:layout_below="@+id/arama_bilgileri_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorText"
                android:gravity="center"
                android:id="@+id/saatbilgi"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="Tarih ve Saat:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="left"
                android:layout_centerVertical="true"
                android:id="@+id/tarih"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/saatbilgi"
                android:layout_height="wrap_content"
                android:textColor="@color/siyah"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/user_profileinfo_border"
            android:id="@+id/kangrup_relative"
            android:layout_below="@+id/tarih_saat_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorText"
                android:gravity="center"
                android:id="@+id/kangrup1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="Aranan Kan Grubu:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="left"
                android:layout_centerVertical="true"
                android:id="@+id/kangrup"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/kangrup1"
                android:layout_height="wrap_content"
                android:textColor="@color/siyah"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/user_profileinfo_border"
            android:id="@+id/konum_relative"
            android:layout_below="@+id/kangrup_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorText"
                android:gravity="center"
                android:id="@+id/konum1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="Aranan Konum:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="left"
                android:layout_centerVertical="true"
                android:id="@+id/konum"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/konum1"
                android:layout_height="wrap_content"
                android:textColor="@color/siyah"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>