<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mesaj">
    <RelativeLayout
        android:id="@+id/dashboard"
        android:background="@drawable/border_low_strong"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="150dp">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="1dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            app:civ_border_width="2dp"
            app:civ_border_color="#d0d0d0"/>
        <View
            android:layout_marginTop="10dp"
            android:id="@+id/line4"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/profile_photo"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/mav" />
        <TextView
            android:layout_below="@+id/line4"
            android:id="@+id/teext"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:textColor="@color/siyah"
            android:text=" Kullanıcı "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <TextView
            android:textStyle="bold"
            android:layout_below="@+id/teext"
            android:id="@+id/txt_user_name"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorAccent"
            android:text=" KullanıcıAdı"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/main_back"
            android:background="@drawable/ic_action_namemain"
            android:layout_marginBottom="30dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/body"
        android:layout_below="@id/dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_low_strong">
        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edit_text">
        </ListView>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/send">
            <EditText
                android:maxLength="20"
                android:maxLines="2"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/gri"
                android:layout_alignParentBottom="true"
                android:background="@drawable/capcha"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:textCursorDrawable="@android:color/black"
                android:textColor="@android:color/black"
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/send"
            android:layout_below="@+id/listView1"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_senddd_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </Button>
    </RelativeLayout>
</RelativeLayout>