<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gundem">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/dashboard"
        android:background="@drawable/border_low_strong"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/logos"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="1dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            app:civ_border_width="2dp"
            app:civ_border_color="#d0d0d0"/>
        <View
            android:layout_marginTop="8dp"
            android:id="@+id/line4"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/logos"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/mav" />
        <TextView
            android:layout_below="@+id/line4"
            android:id="@+id/teext"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:textColor="@color/siyah"
            android:text=" Kullanıcı "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <TextView
            android:textStyle="bold"
            android:layout_below="@+id/teext"
            android:id="@+id/name"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorAccent"
            android:text=" KullanıcıAdı"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/btn_back"
            android:background="@drawable/ic_action_namemain"
            android:layout_marginBottom="30dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <Button
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:id="@+id/ekle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_add_a_photo_black_24dp"
            android:visibility="invisible"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_low_strong">
        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </ListView>
    </RelativeLayout>
</RelativeLayout>