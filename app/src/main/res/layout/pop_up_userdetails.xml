<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center">
    <ImageView
        android:id="@+id/pop_ex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:elevation="5dp"
        android:layout_alignParentRight="true" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/background"
        android:backgroundTint="@color/background"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp">
                <EditText
                    android:id="@+id/user_name"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:hint="Hesap Adı Giriniz ..."
                    android:textCursorDrawable="@android:color/black"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp" />
                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="40dp"
                    android:layout_toRightOf="@+id/user_name"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_searchhhhh_black_24dp"/>
                <TextView
                    android:id="@+id/name"
                    android:layout_below="@+id/btn_search"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/email"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:layout_below="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <TextView
                    android:id="@+id/belirtec"
                    android:layout_below="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />
                <Button
                    android:id="@+id/btn_sil"
                    android:gravity="center"
                    android:background="@drawable/capsul"
                    android:layout_toLeftOf="@+id/belirtec"
                    android:backgroundTint="@color/colorText"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:text="KULLANICI SİL"
                    android:layout_below="@+id/email"
                    android:layout_marginRight="30dp" />
                <Button
                    android:id="@+id/btn_istekler"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/belirtec"
                    android:background="@drawable/capsul"
                    android:backgroundTint="@color/colorText"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:text="İstekler"
                    android:layout_below="@+id/email"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="30dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>