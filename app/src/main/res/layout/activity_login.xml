<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    tools:context=".LoginActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo">
        <EditText
            android:background="@drawable/capcha"
            android:inputType="textPersonName"
            android:hint="  KullanıcıAdı"
            android:drawableStart="@drawable/ic_person_black_25dp"
            android:drawableLeft="@drawable/ic_person_black_25dp"
            android:drawablePadding="5dp"
            android:textCursorDrawable="@android:color/black"
            android:textColor="@android:color/black"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutname"
        app:passwordToggleEnabled="true">
        <EditText
            android:background="@drawable/capcha"
            android:inputType="textPassword"
            android:hint="  Şifre"
            android:drawableStart="@drawable/ic_lock_black_25dp"
            android:drawableLeft="@drawable/ic_lock_black_25dp"
            android:drawablePadding="5dp"
            android:textCursorDrawable="@android:color/black"
            android:textColor="@android:color/black"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/capcha"
        android:layout_below="@id/layoutpassword"
        android:layout_marginTop="15dp"
        android:textColor="@color/siyah"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:textSize="21sp"
        android:textStyle="italic"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/capcha1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/capcha">
        <EditText
            android:maxLength="5"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/entry_capcha"
            android:layout_below="@id/capcha"
            android:background="@drawable/capcha"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/black"
            android:letterSpacing="0.4"
            android:gravity="center"
            android:textSize="20sp"
            android:hint="  Güvenlik Kodu"/>
    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:id="@+id/entry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/link_forget"
        android:layout_above="@+id/link_regist">
        <Button
            android:layout_alignParentTop="true"
            android:background="@drawable/capsul"
            android:id="@+id/btn_login"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorText"
            android:text="Giriş"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/link_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifremi Unuttum"
        android:textColor="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/capcha1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp" />
    <CheckBox
        android:layout_below="@+id/capcha1"
        android:textColor="@color/colorAccent"
        android:id="@+id/ch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:text="Beni Hatırla"/>
    <ProgressBar
        android:id="@+id/loading"
        android:layout_marginTop="35dp"
        android:layout_below="@id/ch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/link_regist"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:text="KAYIT OL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>